{
  "name": "persian-number-words",
  "version": "1.0.0",
  "description": "Convert numbers to Persian words - zero dependencies, TypeScript support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "node --test tests/*.test.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "persian",
    "farsi",
    "number",
    "words",
    "converter",
    "typescript",
    "i18n"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
